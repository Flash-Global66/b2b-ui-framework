{
  "packages": [
    "components/*",
    "config/*",
    "common/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.test.js",
        "*.spec.js"
      ],
      "message": "chore(release): publish"
    }
  }
}
